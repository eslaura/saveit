<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">

      <h2 class='form-header'>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com" %>
        <%= f.input :password, required: false, placeholder: "••••••" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-black" %>
      </div>
      <% end %>
      <div class="div form-center-links">
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
