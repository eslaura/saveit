<div class="banner" style="background-image: linear-gradient(-225deg, rgba(8,80,120,0.6) 0%, rgba(8,80,120,0.6) 50%), url(<%= image_path 'banner'%> );">
  <div class="banner-content">
    <h1>Save it</h1>
    <p> The universal shopping cart revolutionising the shopping experience  </p>
    <%= simple_form_for @item, html: {class: 'form-inline'} do |f| %>
      <%= f.input :url, placeholder: "*******", label: false%>
      <%= f.submit "start saving", class: "btn btn-medium" %>
    <% end %>
  </div>
</div>
