<div class="navbar-wagon-item navbar-wagon-link" data-toggle="modal" data-target="#myModal" id='notification-navbar' data-url="<%= update_all_url %>">
  <% if current_user.items %>
    <% if current_user.items.any? { |item| item.notification } %>
      <%= image_tag 'price-notification.png', id:'price-notification-navbar'%>
    <% end %>
  <% end %>
  <%= button_to "notification", update_all_path, remote: true, class: "navbar-wagon-item navbar-wagon-link" %>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= "Notifications" %></h4>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <%  current_user.items.each do |item| %>
              <% if item.notifications  %>
                <% item.notifications.each do |notification| %>
                  <% if notification.read %>
                    <div class="notification-read">
                      <p> The price for <b><%= item.name %></b> from <b><%=item.original_store%></b> dropped from <b><%= notification.old_price%>€</b> to <b><%=notification.new_price%>€</b>
                      </p>
                    </div>
                  <% else %>
                    <div class="notification-unread">
                      <p> The price for <b><%= item.name %></b> from <b><%=item.original_store%></b> dropped from <b><%= notification.old_price%>€</b> to <b><%=notification.new_price%>€</b>
                      </p>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="checkbox">
          <label class="pull-left"><input type="checkbox" value="">Notify Me</label>
        </div>

      </div>
    </div>
  </div>
</div>
