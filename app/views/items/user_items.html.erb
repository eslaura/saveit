<h1 class="text-center">Your items</h1>

<div class="row">
  <% @items.each do |item| %>
  <div class="col-xs-12 col-sm-4">
    <div class="card">
      <div class="img-frame trigger" >
        <%= image_tag item.src, id:'img', data:{ id: item.id }%>
                <!-- The Modal -->
        <div class="modal myModal" data-id="<%= item.id %>">
          <!-- Modal content -->
          <div class="modal-content">
            <span class="close">&times;</span>
            <p>Some text in the Modal..</p>
          </div>
        </div>
      </div>
      <div class="card-store"><%= item.original_store %></div>
      <div class="card-item-name">
        <%= item.name %>
      </div>
      <div class="card-item-price">
        <p><%= item.price %></p>
      </div>
      <!-- <p>Your price goal: <%= item.user_price %></p> -->
      <%#= link_to "", item_path(item), method: :delete,  data: { confirm: " Are you sure you want to delete this item?" }, class: "fa fa-trash" %>
      <%#= link_to "", edit_item_path(item), class: "fa fa-pencil" %>
      <div class="card-button">
        BUY
      </div>

    </div>
  </div>
  <% end %>
</div>




<%= link_to "Add a new item", new_item_path %>
