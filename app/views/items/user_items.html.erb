<h1 class="text-center">Your items</h1>

<div class="row">
  <% @items.each do |item| %>
  <div class="col-xs-12 col-sm-4">
    <div class="card" id="trigger" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= item.src %>);">
      <div class="card-category"><%= item.description %></div>
      <div class="card-description">
        <h2><%= item.name %></h2>
        <p><%= item.price %></p>
        <p>Your price goal: <%= item.user_price %></p>
        <%= link_to "", item_path(item), method: :delete,  data: { confirm: " Are you sure you want to delete this item?" }, class: "fa fa-trash" %>
        <%= link_to "", edit_item_path(item), class: "fa fa-pencil" %>
      </div>
      <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
    </div>
  </div>
  <% end %>
</div>

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <p>Some text in the Modal..</p>
  </div>
</div>

<%= link_to "Add a new item", new_item_path %>
